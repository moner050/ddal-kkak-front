# Ddal-Kkak Front - 업데이트된 Nginx 설정
# 정적 파일 서빙 + Mixed Content 해결 포함
#
# 이 파일을 다음 위치에 복사하세요:
#   CentOS/RHEL: /etc/nginx/conf.d/ddal-kkak-front.conf
#   Ubuntu/Debian: /etc/nginx/sites-available/ddal-kkak-front
#
# 적용 방법:
#   sudo cp nginx-updated.conf.example /etc/nginx/conf.d/ddal-kkak-front.conf
#   sudo nginx -t
#   sudo systemctl restart nginx

# Upstream 정의
upstream ddal_kkak_backend {
    server 127.0.0.1:3000 fail_timeout=10s max_fails=3;
    keepalive 64;
}

# HTTP 서버 (HTTPS로 리다이렉트)
server {
    listen 80;
    listen [::]:80;
    server_name www.ddalkkak.kro.kr ddalkkak.kro.kr;

    # Let's Encrypt 인증서 갱신용
    location /.well-known/acme-challenge/ {
        root /var/www/certbot;
    }

    # HTTPS로 리다이렉트
    location / {
        return 301 https://$server_name$request_uri;
    }
}

# HTTPS 서버
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name www.ddalkkak.kro.kr ddalkkak.kro.kr;

    # SSL 인증서 (도메인에 맞게 수정)
    ssl_certificate /etc/letsencrypt/live/www.ddalkkak.kro.kr/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/www.ddalkkak.kro.kr/privkey.pem;

    # SSL 설정
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers 'ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384';
    ssl_prefer_server_ciphers off;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 10m;

    # 로그
    access_log /var/log/nginx/ddal-kkak-access.log combined;
    error_log /var/log/nginx/ddal-kkak-error.log warn;

    # ==========================================
    # 타임아웃 설정 (중요!)
    # ==========================================

    # 프록시 타임아웃 (5분)
    proxy_connect_timeout 300s;
    proxy_send_timeout 300s;
    proxy_read_timeout 300s;

    # 클라이언트 타임아웃
    send_timeout 300s;
    client_body_timeout 300s;
    client_header_timeout 300s;

    # 클라이언트 설정
    client_max_body_size 10M;

    # Gzip 압축
    gzip on;
    gzip_vary on;
    gzip_min_length 1000;
    gzip_comp_level 6;
    gzip_types text/plain text/css text/xml text/javascript
               application/json application/javascript application/xml+rss
               application/rss+xml font/truetype font/opentype
               application/vnd.ms-fontobject image/svg+xml;
    gzip_disable "msie6";

    # ==========================================
    # 정적 데이터 파일 직접 서빙 (중요!)
    # ==========================================

    location /data/ {
        # PM2 앱을 거치지 않고 Nginx에서 직접 서빙
        alias /var/www/ddal-kkak-front/dist/data/;

        # 파일 전송 최적화
        sendfile on;
        sendfile_max_chunk 1m;
        tcp_nopush on;
        tcp_nodelay on;

        # 긴 타임아웃 (큰 JSON 파일용)
        proxy_connect_timeout 300s;
        proxy_send_timeout 300s;
        proxy_read_timeout 300s;

        # 캐싱 (10분)
        expires 10m;
        add_header Cache-Control "public, must-revalidate";

        # CORS 허용
        add_header Access-Control-Allow-Origin * always;
        add_header Access-Control-Allow-Methods "GET, OPTIONS" always;
        add_header Access-Control-Allow-Headers "Origin, X-Requested-With, Content-Type, Accept" always;

        # OPTIONS 요청 처리 (CORS preflight)
        if ($request_method = 'OPTIONS') {
            add_header Access-Control-Allow-Origin * always;
            add_header Access-Control-Allow-Methods "GET, OPTIONS" always;
            add_header Access-Control-Allow-Headers "Origin, X-Requested-With, Content-Type, Accept" always;
            add_header Content-Length 0;
            add_header Content-Type text/plain;
            return 204;
        }

        # JSON MIME 타입
        types {
            application/json json;
        }
        default_type application/json;

        # 자동 인덱스 비활성화
        autoindex off;

        # 로그 (디버깅용)
        access_log /var/log/nginx/static-data-access.log combined;
        error_log /var/log/nginx/static-data-error.log warn;
    }

    # ==========================================
    # Health Check
    # ==========================================

    location /health {
        proxy_pass http://ddal_kkak_backend;
        proxy_http_version 1.1;
        proxy_set_header Connection "";

        # Health check 로그 비활성화
        access_log off;

        # 짧은 타임아웃
        proxy_connect_timeout 5s;
        proxy_send_timeout 5s;
        proxy_read_timeout 5s;
    }

    # ==========================================
    # 정적 에셋 (JS, CSS, 이미지, 폰트 등)
    # ==========================================

    # JavaScript & CSS
    location ~* \.(js|css)$ {
        proxy_pass http://ddal_kkak_backend;
        proxy_http_version 1.1;
        proxy_set_header Connection "";

        # 장기 캐싱 (1년)
        expires 1y;
        add_header Cache-Control "public, immutable";

        # Gzip 적용
        gzip_static on;
    }

    # 이미지
    location ~* \.(png|jpg|jpeg|gif|ico|svg|webp)$ {
        proxy_pass http://ddal_kkak_backend;
        proxy_http_version 1.1;
        proxy_set_header Connection "";

        expires 1y;
        add_header Cache-Control "public, immutable";
    }

    # 폰트
    location ~* \.(woff|woff2|ttf|eot|otf)$ {
        proxy_pass http://ddal_kkak_backend;
        proxy_http_version 1.1;
        proxy_set_header Connection "";

        expires 1y;
        add_header Cache-Control "public, immutable";

        # CORS (폰트는 필수)
        add_header Access-Control-Allow-Origin * always;
    }

    # ==========================================
    # 기본 프록시 (모든 다른 요청)
    # ==========================================

    location / {
        proxy_pass http://ddal_kkak_backend;
        proxy_http_version 1.1;

        # 필수 헤더
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $host;
        proxy_set_header X-Forwarded-Port $server_port;

        # 캐시 우회
        proxy_cache_bypass $http_upgrade;

        # 버퍼링 설정
        proxy_buffering on;
        proxy_buffer_size 4k;
        proxy_buffers 8 4k;
        proxy_busy_buffers_size 8k;
    }

    # ==========================================
    # 특수 파일
    # ==========================================

    # robots.txt
    location = /robots.txt {
        proxy_pass http://ddal_kkak_backend;
        access_log off;
    }

    # favicon.ico
    location = /favicon.ico {
        proxy_pass http://ddal_kkak_backend;
        access_log off;
        expires 7d;
    }

    # ==========================================
    # 보안 헤더
    # ==========================================

    # HSTS
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains; preload" always;

    # XSS 보호
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;

    # Referrer 정책
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;

    # ==========================================
    # 에러 페이지 (선택사항)
    # ==========================================

    # error_page 404 /404.html;
    # error_page 500 502 503 504 /50x.html;
}

